<%- include ../../partials/nav %>
<%- include ../../partials/household_top %>


<div class="body-content">
    <div class="content">
        <a href="/household">
            <i class="fas fa-arrow-left fa-3x"></i>
        </a>
        
        <div id="invite"><a href="/household/members/invite">invite new members</a></div>

        <% household.members.forEach( member => {
            let random = Math.floor(Math.random()*4)
            let className = '';
            switch(random) {
                case(0): 
                        className = 'member-pink';
                        break;
                case(1):
                        className = 'member-red';
                        break;
                case(2):
                        className = 'member-orange';
                        break;
                case(3):
                        className = 'member-blue';
                        break;
            }%>

            <div class="member-card <%=className%>">
            <div class="card-inside">
                <div id="profile-pic"><img src="<%=member.profilePic%>" alt="profile picture"></div>
                <div id="profile-name"><h1><%= member.name %></h1></div>
                <div class="profile-buttons">
                <form action="/household/members/<%=member._id%>/edit" method="GET">
                    <input type="submit" value="edit" class="editbtn">
                </form>
                <form action="/household/members/<%=member._id%>?_method=DELETE" method="POST">
                    <input type="submit" value="delete" class="deletebtn">
                </form>
                </div>
            </div>
            </div>

        <%})%>
    </div>
</div>