<body>
	<nav>
		<div id="hello">
			<% if (user) { %>
				<h3>Hello <%=user.firstName%> </h3>
			<% } else {%>
				<h3>Hello Stranger!</h3>
			<% } %>
		</div>
		<div id="login-out">
			<% if (user) { %>
				<a href="/logout"> Log Out </a>
			<% } else { %>
				<a href="/auth/google">Log In with Google</a>
			<% } %>
		</div>
	</nav>